<Window x:Class="VIKGroundStation.Window_Operation_Indication"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VIKGroundStation"
        mc:Ignorable="d"
        Title="Window_Operation_Indication" AllowsTransparency="True" Height="80" Width="400" WindowStyle="None" WindowStartupLocation="CenterScreen" ShowInTaskbar="False" Background="#00300090">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock  Name="TextBlock_Operation_Indication" Text="" TextAlignment="Center" FontSize="20" FontWeight="SemiBold" Foreground="Orange" />
        </Grid>
        <Grid Grid.Row="1" Margin="2">
            <Button x:Name="BTN_CONFIRM" Content="{DynamicResource TITLE_OK}"  Background="DarkCyan" Width="100" Height="35" FontSize="20" FontWeight="SemiBold" Foreground="Orange" Click="BTN_CONFIRM_Click"   VerticalAlignment="Center"
                    BorderBrush="White" BorderThickness="3"/>
        </Grid>
    </Grid>
</Window>
