<Window x:Class="VIKGroundStation.Window_Radar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VIKGroundStation"
        mc:Ignorable="d"
        Title="Window_Radar" Height="250" Width="300" AllowsTransparency="True" WindowStyle="None" Background="#00000000"  ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="410*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock Name="TextBlock_Front_Radar_Dist" Text="{DynamicResource TITLE_OBSTACLE_FRONT}"  FontSize="15" FontWeight="SemiBold" Foreground="Yellow" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Grid>
        <Grid Grid.Row="1">
            <Image Name="Image_Radar"  Source="Images/warn_front_ii.png" IsEnabled="False" Grid.ColumnSpan="2"></Image>
        </Grid>
        <Grid Grid.Row="2">
            <TextBlock Name="TextBlock_Back_Radar_Dist" Text="{DynamicResource TITLE_OBSTACLE_BACK}"  FontSize="15" FontWeight="SemiBold" Foreground="Yellow" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Grid>
    </Grid>
</Window>
